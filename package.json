{
  "name": "auto-canary-comment-plugin",
  "version": "1.0.0",
  "description": "Auto plugin that comments on PRs with canary version",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p . --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "pnpm test && pnpm run lint"
  },
  "keywords": [
    "auto",
    "plugin",
    "canary",
    "release",
    "comment"
  ],
  "author": "Kelly Harrop",
  "license": "MIT",
  "dependencies": {
    "@auto-it/core": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "typescript": "^4.5.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@auto-it/core": ">=10.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.13.1"
  },
  "packageManager": "pnpm@10.13.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kharrop/auto-canary-comment"
  }
}
